{
  "name": "clipboard-manager-js",
  "version": "1.0.0",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "rm -rf dist; electron-builder .",
    "linux-desktop-icon-workaround": "mv ~/.local/share/icons/hicolor/0x0/apps/appimagekit-clipboard-manager-js.png ~/.local/share/icons/hicolor/256x256/apps/ && update-icon-caches /usr/share/icons/*",
    "create-icon": "f() { cd resources; inkscape -z -e $1.png -h 256 $1.svg; convert $1.png -gravity center -background '#0000' -extent 256x256 $1-256.png; }; f",
    "create-icons": "npm run create-icon fa-copy-regular; npm run create-icon fa-dollar-sign-solid"
  },
  "keywords": [
    "clipboard",
    "manager",
    "electron"
  ],
  "author": "mahhov1",
  "license": "ISC",
  "dependencies": {
    "node-key-sender": "^1.0.11"
  },
  "devDependencies": {
    "electron": "^5.0.0-beta.5",
    "electron-builder": "^20.39.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mahhov/clipboard-manager-js.git"
  },
  "bugs": {
    "url": "https://github.com/mahhov/clipboard-manager-js/issues"
  },
  "homepage": "https://github.com/mahhov/clipboard-manager-js#readme",
  "description": "",
  "build": {
    "asar": false,
    "artifactName": "${name}-${version}-${os}-${arch}.${ext}",
    "files": [
      "resources",
      "src"
    ],
    "icon": "./resources/fa-copy-regular.png",
    "linux": {
      "target": "AppImage"
    }
  }
}
